// Prisma schema for HyFern
// Database configuration

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// User role enumeration
enum Role {
  OWNER      // Full system access
  ADMIN      // Admin privileges
  MODERATOR  // Moderate privileges
  VIEWER     // Read-only access
}

// User authentication and authorization
model User {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  role         Role     @default(VIEWER)

  // TOTP 2FA fields
  totpSecret   String?
  totpEnabled  Boolean  @default(false)
  recoveryCodes String[] @default([])

  // Timestamps
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  sessions     Session[]
  installedMods InstalledMod[]

  @@map("users")
}

// Session management for authenticated users
model Session {
  id           String   @id @default(cuid())
  userId       String
  expiresAt    DateTime
  lastActiveAt DateTime @default(now())
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())

  // Relations
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
}

// Minecraft mods installed on the server
model InstalledMod {
  id           String   @id @default(cuid())
  curseforgeId Int?     @unique
  name         String
  slug         String
  version      String
  fileName     String   @unique
  installedAt  DateTime @default(now())
  installedBy  String
  isCore       Boolean  @default(false) // Core mods cannot be uninstalled

  // Relations
  installer    User     @relation(fields: [installedBy], references: [id])

  @@index([slug])
  @@index([installedAt])
  @@map("installed_mods")
}

// Security: Track login attempts for rate limiting
model LoginAttempt {
  id        String   @id @default(cuid())
  ipAddress String
  success   Boolean
  createdAt DateTime @default(now())

  @@index([ipAddress, createdAt])
  @@index([createdAt])
  @@map("login_attempts")
}
