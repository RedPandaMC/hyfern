# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
TZ=UTC
LETSENCRYPT_EMAIL=your-email@example.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=hyfern
POSTGRES_PASSWORD=change_this_secure_password

# Pelican Panel Database
PELICAN_DB_NAME=pelican
PELICAN_DB_USER=pelican
PELICAN_DB_PASSWORD=change_this_pelican_db_password

# Frontend Application Database
FRONTEND_DB_NAME=hyfern_frontend
FRONTEND_DB_USER=hyfern_frontend
FRONTEND_DB_PASSWORD=change_this_frontend_db_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=change_this_redis_password

# =============================================================================
# PELICAN PANEL CONFIGURATION
# =============================================================================
PELICAN_APP_URL=https://panel.hyfern.us
# Generate with: php artisan key:generate --show (or use: base64:YOUR_BASE64_KEY_HERE)
PELICAN_APP_KEY=base64:CHANGE_THIS_TO_GENERATED_KEY

# =============================================================================
# PELICAN PANEL EMAIL CONFIGURATION
# =============================================================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_FROM_ADDRESS=noreply@hyfern.us

# =============================================================================
# FRONTEND APPLICATION CONFIGURATION
# =============================================================================
NEXTAUTH_URL=https://hyfern.us
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=change_this_to_random_32_byte_secret

# Server access password (for public landing page password gate)
SERVER_ACCESS_PASSWORD=change_this_server_password

# Public server address (shown after password verification)
NEXT_PUBLIC_SERVER_ADDRESS=hyfern.us

# Server password (in-game server password shown on connect page)
SERVER_PASSWORD=change_this_server_password

# =============================================================================
# WINGS API CONFIGURATION
# =============================================================================
# Generate API key from Pelican Panel admin interface
WINGS_API_KEY=change_this_to_wings_api_key
WINGS_SERVER_UUID=your-server-uuid

# =============================================================================
# PELICAN API CONFIGURATION
# =============================================================================
# Generate API key from Pelican Panel admin interface
PELICAN_API_KEY=change_this_to_pelican_api_key
PELICAN_SERVER_UUID=your-server-uuid

# =============================================================================
# HYTALE SERVER CONFIGURATION
# =============================================================================
SERVER_MEMORY=4G
GC_TYPE=G1GC
MAX_GC_PAUSE=200
PARALLEL_REF_PROC=true
AOT_CACHE=HytaleServer.aot
BACKUP_ENABLED=false
BACKUP_FREQUENCY=60
CUSTOM_JVM_FLAGS=
DISABLE_SENTRY=false

# =============================================================================
# HYTALE WEBSERVER PLUGIN CONFIGURATION
# =============================================================================
# Password for the hyfern service account on WebServer plugin
# This will be bcrypt hashed in the provisioning config
HYTALE_WEBSERVER_PASSWORD=change_this_webserver_password

# =============================================================================
# CURSEFORGE API CONFIGURATION (OPTIONAL)
# =============================================================================
# Get your API key from: https://console.curseforge.com/
# Leave empty or remove to disable CurseForge mod browsing (manual upload still works)
CURSEFORGE_API_KEY=

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
GRAFANA_ROOT_URL=https://grafana.hyfern.us
# Admin username is hardcoded to 'admin' in docker-compose.yml
GRAFANA_ADMIN_PASSWORD=change_this_grafana_password
